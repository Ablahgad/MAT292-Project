x = nodes(:,1);
y = nodes(:,2);

figure;
scatter(x, y, 40, 'filled');   % draw points
hold on;

% Connect points in grid (optional, if structured mesh)
div_x = 10;   % number of divisions in x
div_y = 10;   % number of divisions in y

% loop through and draw lines between neighbors
for i = 1:div_x
    idx = (i-1)*div_y + (1:div_y);
    plot(x(idx), y(idx), 'w');           % horizontal lines
end

for j = 1:div_y
    idx = j:div_y:(div_x*div_y);
    plot(x(idx), y(idx), 'w');           % vertical lines
end

axis equal;
xlabel('X (mm)');
ylabel('Y (mm)');
title('CFD Mesh Nodes');
grid on;

